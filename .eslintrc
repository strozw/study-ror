{
  "extends": ["standard", "prettier"],
  "env": {
    "browser": true,
    "es6": true
  },
  "ecmaFeatures": {
    "jsx": true
  },
  "plugins": ["prettier", "react"],
  "rules": {
    "prettier/prettier": [
      "error",
      {
        "singleQuote": true,
        "semi": false
      }
    ],
    "yoda": 0,
    "no-unused-vars": 1,
    "react/jsx-uses-vars": 1
  },
  "globals": {
    "$": false,
    "mdc": true
  }
}
